<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/guid_content_padding"
    android:background="@color/colorWhite"
    android:id="@+id/detailLinLayout"
    tools:context=".guidage.GuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IUT Rodez Professeur Haut"
            android:textColor="@color/darkText"
            android:textSize="16sp"
            android:layout_weight="0.9"
            android:id="@+id/titleParking"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="0dp"
            android:background="@color/colorWhite"
            android:src="@drawable/star_favori"
            android:scaleType="fitEnd"
            android:layout_weight="0.1"
            android:id="@+id/favBt"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/guid_content_padding_small_hor"
        android:text="Il y a 12 minutes"
        android:textColor="@color/lightText"
        android:id="@+id/actuTV"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-40dp"
        android:scaleX="0.55"
        android:scaleY="0.55"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/carsBG"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cars_bg" />

        <ImageView
            android:id="@+id/carsOverlay"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/guid_padding_hor"
        android:layout_marginBottom="@dimen/guid_padding_hor"
        android:background="@color/lightColor"
        android:id="@+id/delimViewL"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="80dp"
            android:background="@color/colorWhite"
            android:textColor="@color/lightText"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:text="RAFRAÃŽCHIR"
            android:id="@+id/refreshBT"
            android:onClick="refreshClick"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/greenColor"
                android:textStyle="bold"
                android:text="5"
                android:id="@+id/nbPlaces"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"
                android:textColor="@color/lightText"
                android:text="places libres"
                android:id="@+id/nbTotPlaces"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>